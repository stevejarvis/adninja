<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/intro_root">
<ScrollView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/done"
    >
	<TableLayout
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:shrinkColumns="*"
		>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		<LinearLayout
			android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
			<ImageView 
				android:id="@+id/introNinjaAllow"
				android:src="@drawable/ninja_allow_clear"
				android:layout_alignParentLeft="true"
				style="@style/introImage"
				/>
			<TextView 
				android:id="@+id/introTextAllow"
			    android:layout_toRightOf="@id/introNinjaAllow"
			    android:text="@string/intro_allow"
			    style="@style/introText"
			    />
		</LinearLayout>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		<LinearLayout
			android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
			<ImageView 
				android:id="@+id/introNinjaBlock"
				android:src="@drawable/ninja_block_clear"
				android:layout_alignParentRight="true"
				style="@style/introImage"
				/>
			<TextView 
				android:id="@+id/introTextBlock"
			    android:layout_marginTop="18dp"
			    android:text="@string/intro_block"
			    style="@style/introText"
			    />
		</LinearLayout>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		<LinearLayout
			android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
			<TextView 
				android:id="@+id/disclaimer"
			    android:gravity="center"
			    android:layout_marginTop="18dp"
			    android:text="@string/disclaimer"
			    style="@style/introText"
			    />
		</LinearLayout>
		</TableRow>
	</TableLayout>
</ScrollView>
<Button
	android:id="@+id/done"
	android:layout_marginTop="5dp"
	android:layout_alignParentBottom="true"
	android:text="The End"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	/>
</RelativeLayout>